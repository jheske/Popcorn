<!-- Basic Movie Details Small image, Ratings stars, Rating txt, Year, Minutes -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <RelativeLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Container holding thumbnail and play details container -->
        <LinearLayout
            android:id="@+id/movie_details_container"
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="@dimen/margin_40"
            android:orientation="horizontal">
            <!-- Thumbnail sized image of poster -->
            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/desc_title" />
            <!-- Play details container hold release year, runtime,
                 viewer rating, and favorites button -->
            <LinearLayout
                android:id="@+id/play_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginTop="30dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/rating_bar_vote_average"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:numStars="10" />

                <TextView
                    android:id="@+id/tv_vote_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_viewer_rating"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/textColorSecondary" />

                <TextView
                    android:id="@+id/tv_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_release_year"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/textColorSecondary" />

                <TextView
                    android:id="@+id/tv_runtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_runtime"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/textColorSecondary"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/btn_mark_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_mark_fav" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_details_container"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_20"
            android:text="@string/text_overview" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
