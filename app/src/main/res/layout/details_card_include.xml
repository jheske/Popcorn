<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <RelativeLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Container holding thumbnail and play details container -->
        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:textSize="30sp"
            android:visibility="gone"
            tools:text="Movie Title" />

        <include
            android:id="@+id/include_ratings"
            layout="@layout/detail_card_ratings_include"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_title" />

        <!-- Thumbnail sized image of poster
        <LinearLayout
            android:id="@+id/movie_details_container"
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/include_ratings"
            android:orientation="horizontal">
        </LinearLayout> -->

        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/include_ratings"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desc_title" />

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_thumbnail"
            android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/textColorSecondary"
            android:text="@string/text_overview" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

